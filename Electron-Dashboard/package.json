{
  "name": "electron-dashboard",
  "version": "1.0.0",
  "description": "System Dashboard for monitoring and rate limiting",
  "productName": "System Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "start:secure": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.electron.dashboard",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      "bin/**",
      ".env"
    ],
    "files": [
      "!**/*.py",
      "!**/*.sh",
      "!**/*.txt",
      "**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7"
  }
}
